{
    "name": "Healthy",
    "version": "1.0",
    "description": "Checking web site health status",
    "options_page": "options.html",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "healthy v1.0"
    },
    "permissions": [
        "storage",
        "https://*/",
        "http://*/"
    ],
    "manifest_version": 2
}
